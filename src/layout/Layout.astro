---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link
      rel="stylesheet"
      href="https://unpkg.com/tippy.js@6/animations/scale.css"
    />
    <meta name="author" content="Statulr and Hamza" />
    <meta
      name="description"
      content="Fast Easy way to Install and Update Aur and Non-Aur Arch Linux Packages"
    />
    <meta property="og:title" content="Aurc - Swift Solution for Arch Packages" />
    <meta
      property="og:description"
      content="Fast Easy way to Install and Update Aur and Non-Aur Arch Linux Packages!"
    />
    <meta property="og:url" content="https://aurc.run/" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta
      property="og:image"
      content="https://raw.githubusercontent.com/statulr/aurc-site/main/public/preview.png"
    />
    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:image:src"
      content="https://raw.githubusercontent.com/statulr/aurc-site/main/public/preview.png"
    />
    <meta name="theme-color" content="#0f172a" />
    <title>Aurc</title>
  </head>
  <body
    class="min-h-[100svh] flex flex-col justify-center text-white bg-gradient-to-t from-slate-900 via-slate-900 to-indigo-950"
  >
    <NavBar />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  @font-face {
    font-family: "Geist Mono Medium";
    src: url("/font/GeistMono-Medium.woff2");
  }

  @font-face {
    font-family: "Gesit Regular SemiBold";
    src: url("/font/Geist-SemiBold.woff2");
  }
</style>
